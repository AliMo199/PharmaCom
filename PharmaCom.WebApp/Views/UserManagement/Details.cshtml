@model UserDetailViewModel

@{
    ViewData["Title"] = "User Details";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">
        <i class="bi bi-person-circle"></i> User Details
    </h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-primary">
                <i class="bi bi-pencil"></i> Edit User
            </a>
            <a asp-action="ChangePassword" asp-route-id="@Model.Id" class="btn btn-sm btn-warning">
                <i class="bi bi-key"></i> Change Password
            </a>
            @if (Model.LockoutEnd != null && Model.LockoutEnd > DateTimeOffset.Now)
            {
                <button type="button" class="btn btn-sm btn-success" onclick="unlockUser('@Model.Id')">
                    <i class="bi bi-unlock"></i> Unlock User
                </button>
            }
            else
            {
                <button type="button" class="btn btn-sm btn-warning" onclick="lockUser('@Model.Id')">
                    <i class="bi bi-lock"></i> Lock User
                </button>
            }
            <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <!-- User Information Card -->
    <div class="col-lg-4 mb-4">
        <div class="card">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="bi bi-person-circle text-primary" style="font-size: 5rem;"></i>
                </div>
                <h4 class="card-title">@Model.FirstName @Model.LastName</h4>
                <p class="text-muted mb-2">@@@Model.UserName</p>

                <!-- Status Badges -->
                <div class="mb-3">
                    @if (Model.LockoutEnd != null && Model.LockoutEnd > DateTimeOffset.Now)
                    {
                        <span class="badge bg-danger">
                            <i class="bi bi-lock"></i> Locked Until @Model.LockoutEnd.Value.ToString("MMM dd, yyyy")
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-success">
                            <i class="bi bi-check-circle"></i> Active
                        </span>
                    }
                    @if (Model.EmailConfirmed)
                    {
                        <span class="badge bg-info">
                            <i class="bi bi-envelope-check"></i> Email Verified
                        </span>
                    }
                    @if (Model.TwoFactorEnabled)
                    {
                        <span class="badge bg-warning">
                            <i class="bi bi-shield-check"></i> 2FA Enabled
                        </span>
                    }
                </div>

                <!-- Roles -->
                <div class="mb-3">
                    <h6 class="text-muted mb-2">Roles</h6>
                    @foreach (var role in Model.Roles)
                    {
                        <span class="badge bg-@GetRoleBadgeClass(role) me-1">@role</span>
                    }
                </div>

                <hr>

                <!-- Contact Information -->
                <div class="text-start">
                    <h6 class="text-muted mb-3">Contact Information</h6>
                    <p class="mb-2">
                        <i class="bi bi-envelope me-2"></i>
                        <small>@Model.Email</small>
                    </p>
                    @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                    {
                        <p class="mb-2">
                            <i class="bi bi-telephone me-2"></i>
                            <small>@Model.PhoneNumber</small>
                            @if (Model.PhoneNumberConfirmed)
                            {
                                <i class="bi bi-check-circle text-success" title="Verified"></i>
                            }
                        </p>
                    }
                </div>

                <hr>

                <!-- Account Settings -->
                <div class="text-start">
                    <h6 class="text-muted mb-3">Account Settings</h6>
                    <div class="form-check form-switch mb-2">
                        <input class="form-check-input" type="checkbox" disabled @(Model.EmailConfirmed ? "checked" : "")>
                        <label class="form-check-label">Email Confirmed</label>
                    </div>
                    <div class="form-check form-switch mb-2">
                        <input class="form-check-input" type="checkbox" disabled @(Model.PhoneNumberConfirmed ? "checked" : "")>
                        <label class="form-check-label">Phone Confirmed</label>
                    </div>
                    <div class="form-check form-switch mb-2">
                        <input class="form-check-input" type="checkbox" disabled @(Model.TwoFactorEnabled ? "checked" : "")>
                        <label class="form-check-label">Two-Factor Auth</label>
                    </div>
                    <div class="form-check form-switch mb-2">
                        <input class="form-check-input" type="checkbox" disabled @(Model.LockoutEnabled ? "checked" : "")>
                        <label class="form-check-label">Lockout Enabled</label>
                    </div>
                </div>

                @if (Model.AccessFailedCount > 0)
                {
                    <hr>
                    <div class="alert alert-warning mb-0" role="alert">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        <small>Failed Login Attempts: @Model.AccessFailedCount</small>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Statistics and Details -->
    <div class="col-lg-8">
        <!-- Statistics Cards -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <h6 class="card-title">Total Orders</h6>
                        <h3 class="mb-0">@Model.Statistics.TotalOrders</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <h6 class="card-title">Total Spent</h6>
                        <h3 class="mb-0">$@Model.Statistics.TotalSpent.ToString("F2")</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-info text-white">
                    <div class="card-body">
                        <h6 class="card-title">Avg Order</h6>
                        <h3 class="mb-0">$@Model.Statistics.AverageOrderValue.ToString("F2")</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-warning text-white">
                    <div class="card-body">
                        <h6 class="card-title">Pending</h6>
                        <h3 class="mb-0">@Model.Statistics.PendingOrders</h3>
                    </div>
                </div>
            </div>
        </div>

        <!-- Order Statistics -->
        <div class="card mb-4">
            <div class="card-header bg-white">
                <h5 class="mb-0">
                    <i class="bi bi-graph-up"></i> Order Statistics
                </h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-4">
                        <h6 class="text-muted">Completed</h6>
                        <h4 class="text-success">@Model.Statistics.CompletedOrders</h4>
                    </div>
                    <div class="col-md-4">
                        <h6 class="text-muted">Pending</h6>
                        <h4 class="text-warning">@Model.Statistics.PendingOrders</h4>
                    </div>
                    <div class="col-md-4">
                        <h6 class="text-muted">Cancelled</h6>
                        <h4 class="text-danger">@Model.Statistics.CancelledOrders</h4>
                    </div>
                </div>
                @if (Model.Statistics.LastOrderDate.HasValue)
                {
                    <hr>
                    <p class="mb-0 text-center">
                        <small class="text-muted">
                            Last Order: @Model.Statistics.LastOrderDate.Value.ToString("MMMM dd, yyyy")
                        </small>
                    </p>
                }
            </div>
        </div>

        <!-- Recent Orders -->
        <div class="card mb-4">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="bi bi-cart"></i> Recent Orders
                </h5>
                <a asp-controller="Dashboard" asp-action="OrderManagement" asp-route-userId="@Model.Id" class="btn btn-sm btn-outline-primary">
                    View All Orders
                </a>
            </div>
            <div class="card-body p-0">
                @if (Model.RecentOrders.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Order #</th>
                                    <th>Date</th>
                                    <th>Status</th>
                                    <th class="text-end">Amount</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model.RecentOrders)
                                {
                                    <tr>
                                        <td><strong>#@order.OrderId</strong></td>
                                        <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                                        <td>
                                            <span class="badge bg-@GetStatusBadgeClass(order.Status)">
                                                @order.Status
                                            </span>
                                        </td>
                                        <td class="text-end">$@order.TotalAmount.ToString("F2")</td>
                                        <td class="text-end">
                                            <a asp-controller="Order" asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye"></i> View
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="p-4 text-center text-muted">
                        <i class="bi bi-cart-x" style="font-size: 2rem;"></i>
                        <p class="mb-0 mt-2">No orders found</p>
                    </div>
                }
            </div>
        </div>

        <!-- Addresses -->
        <div class="card">
            <div class="card-header bg-white">
                <h5 class="mb-0">
                    <i class="bi bi-geo-alt"></i> Addresses
                </h5>
            </div>
            <div class="card-body">
                @if (Model.Addresses.Any())
                {
                    <div class="row">
                        @foreach (var address in Model.Addresses)
                        {
                            <div class="col-md-6 mb-3">
                                <div class="border rounded p-3 @(address.IsDefault ? "border-primary" : "")">
                                    @if (address.IsDefault)
                                    {
                                        <span class="badge bg-success mb-2">
                                            <i class="bi bi-star"></i> Default
                                        </span>
                                    }
                                    <p class="mb-1"><strong>@address.Line1</strong></p>
                                    <p class="mb-0 text-muted">@address.City, @address.Governorate</p>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted mb-0">
                        <i class="bi bi-info-circle me-2"></i>No addresses on file
                    </p>
                }
            </div>
        </div>
    </div>
</div>

@functions {
    string GetRoleBadgeClass(string role)
    {
        return role switch
        {
            "Admin" => "danger",
            "Pharmacist" => "primary",
            "Customer" => "secondary",
            _ => "info"
        };
    }

    string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Completed" => "success",
            "Approved" => "success",
            "Pending" => "warning",
            "Payment Received" => "info",
            "Cancelled" => "secondary",
            "Rejected" => "danger",
            _ => "secondary"
        };
    }
}

@section Scripts {
    <script>
        $(document).ready(function() {
            var token = $('input[name="__RequestVerificationToken"]').val();

            function lockUser(userId) {
                if (confirm('Are you sure you want to lock this user for 7 days?')) {
                    $.ajax({
                        url: '@Url.Action("LockUser", "UserManagement")',
                        type: 'POST',
                        data: {
                            id: userId,
                            lockoutDays: 7,
                            __RequestVerificationToken: token
                        },
                        success: function(response) {
                            if (response.success) {
                                alert(response.message);
                                location.reload();
                            } else {
                                alert('Error: ' + response.message);
                            }
                        },
                        error: function() {
                            alert('An error occurred while locking the user.');
                        }
                    });
                }
            }

            function unlockUser(userId) {
                if (confirm('Are you sure you want to unlock this user?')) {
                    $.ajax({
                        url: '@Url.Action("UnlockUser", "UserManagement")',
                        type: 'POST',
                        data: {
                            id: userId,
                            __RequestVerificationToken: token
                        },
                        success: function(response) {
                            if (response.success) {
                                alert(response.message);
                                location.reload();
                            } else {
                                alert('Error: ' + response.message);
                            }
                        },
                        error: function() {
                            alert('An error occurred while unlocking the user.');
                        }
                    });
                }
            }

            // Expose functions globally
            window.lockUser = lockUser;
            window.unlockUser = unlockUser;
        });
    </script>
    @Html.AntiForgeryToken()
}