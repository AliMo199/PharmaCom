@model PharmaCom.Domain.Models.Category

@{
    ViewData["Title"] = "Edit Category";
}

<div class="container mt-5">
    <div class="card shadow-sm p-4">
        <h2 class="mb-4">Edit Category</h2>

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control rounded" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-rounded shadow-sm">Save</button>
            <a asp-action="Index" class="btn btn-secondary btn-rounded ms-2">Back</a>
        </form>
    </div>
</div>