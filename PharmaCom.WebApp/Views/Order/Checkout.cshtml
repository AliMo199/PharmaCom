@model PharmaCom.Domain.ViewModels.CheckoutViewModel

@{
    Layout = "~/Views/Shared/_MainThemeLayout.cshtml";
    ViewData["Title"] = "Checkout";
    ViewBag.CurrentPage = "checkout";
}

@section Breadcrumb {
    <div class="bg-light py-3">
        <div class="container">
            <div class="row">
                <div class="col-md-12 mb-0">
                    <a asp-controller="Home" asp-action="Index">Home</a>
                    <span class="mx-2 mb-0">/</span>
                    <a asp-controller="Cart" asp-action="Index">Cart</a>
                    <span class="mx-2 mb-0">/</span>
                    <strong class="text-black">Checkout</strong>
                </div>
            </div>
        </div>
    </div>
}

<div class="site-section">
    <div class="container">
        <div class="row mb-4">
            <div class="col-md-12">
                <h2 class="text-black h3 text-uppercase">Checkout</h2>
            </div>
        </div>

        <div class="row">
            <!-- Left Column - Order Summary & Prescription Upload -->
            <div class="col-lg-8">
                <!-- Order Summary -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white border-bottom py-3">
                        <h5 class="mb-0">
                            <i class="icon-shopping-bag mr-2"></i>Order Summary
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="bg-light">
                                    <tr>
                                        <th class="border-0 py-3">Product</th>
                                        <th class="border-0 py-3 text-center">Quantity</th>
                                        <th class="border-0 py-3 text-right">Price</th>
                                        <th class="border-0 py-3 text-right">Subtotal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.CartItems)
                                    {
                                        <tr>
                                            <td class="align-middle py-3">
                                                <strong>@item.Product.Name</strong>
                                                @if (item.Product.IsRxRequired)
                                                {
                                                    <br>
                                                    <span class="badge badge-danger badge-sm mt-1">
                                                        <i class="icon-alert-circle"></i> Rx Required
                                                    </span>
                                                }
                                            </td>
                                            <td class="align-middle text-center py-3">
                                                <span class="badge badge-secondary px-3 py-2">@item.Quantity</span>
                                            </td>
                                            <td class="align-middle text-right py-3">
                                                $@item.Product.Price.ToString("F2")
                                            </td>
                                            <td class="align-middle text-right py-3">
                                                <strong>$@((item.Product.Price * item.Quantity).ToString("F2"))</strong>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Prescription Upload (if needed) -->
                @if (Model.RequiresPrescription)
                {
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-danger text-white py-3">
                            <h5 class="mb-0">
                                <i class="icon-alert-circle mr-2"></i>Prescription Required
                            </h5>
                        </div>
                        <div class="card-body p-4">
                            <div class="alert alert-warning mb-4">
                                <i class="icon-info mr-2"></i>
                                <strong>Important:</strong> Your order contains prescription-required medications.
                                Please upload a valid prescription to complete your order.
                            </div>

                            <form id="prescriptionUploadForm" enctype="multipart/form-data">
                                @Html.AntiForgeryToken()
                                <input type="hidden" id="tempPrescriptionId" name="tempPrescriptionId" value="" />

                                <div class="form-group mb-3">
                                    <label class="font-weight-bold">
                                        Upload Prescription <span class="text-danger">*</span>
                                    </label>
                                    <div class="custom-file">
                                        <input type="file"
                                               class="custom-file-input"
                                               id="prescriptionFile"
                                               name="prescriptionFile"
                                               accept=".jpg,.jpeg,.png,.pdf"
                                               required>
                                        <label class="custom-file-label" for="prescriptionFile">
                                            Choose file...
                                        </label>
                                    </div>
                                    <small class="form-text text-muted">
                                        Accepted formats: JPG, PNG, PDF (Max size: 5MB)
                                    </small>
                                </div>

                                <!-- Preview Area -->
                                <div id="prescriptionPreview" class="mb-3" style="display:none;">
                                    <div class="card bg-light">
                                        <div class="card-body p-3">
                                            <div class="d-flex align-items-center justify-content-between">
                                                <div>
                                                    <i class="icon-file-text mr-2"></i>
                                                    <span id="fileName"></span>
                                                    <span id="fileSize" class="text-muted ml-2"></span>
                                                </div>
                                                <button type="button" class="btn btn-sm btn-outline-danger" id="clearFile">
                                                    <i class="icon-close"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div id="uploadStatus" class="mt-3" style="display:none;">
                                    <div class="alert" id="uploadMessage"></div>
                                </div>
                            </form>
                        </div>
                    </div>
                }
            </div>

            <!-- Right Column - Order Total & Actions -->
            <div class="col-lg-4">
                <!-- Shipping Address -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white border-bottom py-3">
                        <h5 class="mb-0">
                            <i class="icon-location-arrow mr-2"></i>Shipping Address
                        </h5>
                    </div>
                    <div class="card-body p-4">
                        <address class="mb-0">
                            @Model.ShippingAddress.Line1<br>
                            @Model.ShippingAddress.City<br>
                            @Model.ShippingAddress.Governorate
                        </address>
                    </div>
                </div>

                <!-- Order Total -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white border-bottom py-3">
                        <h5 class="mb-0">
                            <i class="icon-credit-card mr-2"></i>Order Total
                        </h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between mb-3">
                            <span>Subtotal:</span>
                            <strong>$@Model.TotalAmount.ToString("F2")</strong>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-4">
                            <span class="h5 mb-0">Total:</span>
                            <strong class="h4 text-primary mb-0">$@Model.TotalAmount.ToString("F2")</strong>
                        </div>

                        <!-- ✅ FIXED: Form for checkout submission -->
                        <form id="checkoutForm" asp-action="ProcessCheckout" asp-controller="Order" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="prescriptionId" id="hiddenPrescriptionId" value="" />

                            @if (Model.RequiresPrescription)
                            {
                                <button type="submit" id="proceedToPayment" class="btn btn-primary btn-lg btn-block" disabled>
                                    <i class="icon-lock mr-2"></i> Upload Prescription First
                                </button>
                                <small class="text-muted d-block text-center mt-2">
                                    <i class="icon-info"></i> Prescription upload required
                                </small>
                            }
                            else
                            {
                                <button type="submit" id="proceedToPayment" class="btn btn-primary btn-lg btn-block">
                                    <i class="icon-credit-card mr-2"></i> Proceed to Payment
                                </button>
                            }
                        </form>

                        <a asp-controller="Cart" asp-action="Index" class="btn btn-outline-secondary btn-block mt-2">
                            <i class="icon-arrow-left mr-2"></i> Back to Cart
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            var requiresPrescription = @Model.RequiresPrescription.ToString().ToLower();
            var prescriptionUploaded = false;

            console.log('Checkout page loaded. Requires prescription:', requiresPrescription);

            // File input change handler
            $('#prescriptionFile').on('change', function() {
                var file = this.files[0];
                if (file) {
                    console.log('File selected:', file.name, file.size);

                    // Validate file size (5MB max)
                    if (file.size > 5 * 1024 * 1024) {
                        alert('File size must be less than 5MB');
                        this.value = '';
                        return;
                    }

                    // Update custom file label
                    $(this).next('.custom-file-label').text(file.name);

                    // Show preview
                    $('#fileName').text(file.name);
                    $('#fileSize').text('(' + (file.size / 1024).toFixed(2) + ' KB)');
                    $('#prescriptionPreview').slideDown();

                    // Auto-upload
                    uploadPrescription();
                }
            });

            // Clear file button
            $('#clearFile').on('click', function() {
                console.log('Clear file clicked');
                $('#prescriptionFile').val('');
                $('.custom-file-label').text('Choose file...');
                $('#prescriptionPreview').slideUp();
                $('#tempPrescriptionId').val('');
                $('#hiddenPrescriptionId').val('');
                prescriptionUploaded = false;
                updatePaymentButton();
            });

            function uploadPrescription() {
                var formData = new FormData();
                var file = $('#prescriptionFile')[0].files[0];

                if (!file) {
                    console.log('No file selected');
                    return;
                }

                console.log('Starting prescription upload...');

                formData.append('file', file);
                formData.append('__RequestVerificationToken', $('input[name="__RequestVerificationToken"]').val());

                $('#uploadStatus').show();
                $('#uploadMessage').removeClass('alert-success alert-danger').addClass('alert-info').text('Uploading prescription...');

                $.ajax({
                    url: '@Url.Action("UploadPrescriptionForCheckout", "Prescription")',
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function(response) {
                        console.log('Upload response:', response);

                        if (response.success) {
                            $('#uploadMessage').removeClass('alert-info').addClass('alert-success')
                                .html('<i class="icon-check-circle mr-2"></i><strong>Success!</strong> Prescription uploaded successfully.');

                            prescriptionUploaded = true;
                            $('#tempPrescriptionId').val(response.prescriptionId);
                            $('#hiddenPrescriptionId').val(response.prescriptionId);

                            console.log('Prescription ID set to:', response.prescriptionId);

                            updatePaymentButton();

                            // Auto-hide success message after 5 seconds
                            setTimeout(function() {
                                $('#uploadStatus').slideUp();
                            }, 5000);
                        } else {
                            console.error('Upload failed:', response.message);
                            $('#uploadMessage').removeClass('alert-info').addClass('alert-danger')
                                .html('<i class="icon-alert-circle mr-2"></i><strong>Error:</strong> ' + response.message);
                            prescriptionUploaded = false;
                            updatePaymentButton();
                        }
                    },
                    error: function(xhr, status, error) {
                        console.error('Upload error:', status, error);
                        var errorMsg = 'An error occurred during upload';
                        if (xhr.responseJSON && xhr.responseJSON.message) {
                            errorMsg = xhr.responseJSON.message;
                        }

                        $('#uploadMessage').removeClass('alert-info').addClass('alert-danger')
                            .html('<i class="icon-alert-circle mr-2"></i><strong>Error:</strong> ' + errorMsg);
                        prescriptionUploaded = false;
                        updatePaymentButton();
                    }
                });
            }

            function updatePaymentButton() {
                var $button = $('#proceedToPayment');

                if (!requiresPrescription || prescriptionUploaded) {
                    console.log('Enabling payment button');
                    $button
                        .prop('disabled', false)
                        .removeClass('btn-secondary')
                        .addClass('btn-primary')
                        .html('<i class="icon-credit-card mr-2"></i> Proceed to Payment');
                } else {
                    console.log('Disabling payment button - prescription required but not uploaded');
                    $button
                        .prop('disabled', true)
                        .removeClass('btn-primary')
                        .addClass('btn-secondary')
                        .html('<i class="icon-lock mr-2"></i> Upload Prescription First');
                }
            }

            // ✅ FIXED: Form submission handler
            $('#checkoutForm').on('submit', function(e) {
                e.preventDefault();

                var $button = $('#proceedToPayment');
                var prescriptionId = $('#hiddenPrescriptionId').val();

                console.log('Form submitting. Prescription ID:', prescriptionId);
                console.log('Requires prescription:', requiresPrescription);
                console.log('Prescription uploaded:', prescriptionUploaded);

                // Validate prescription if required
                if (requiresPrescription && !prescriptionId) {
                    alert('Please upload a prescription before proceeding.');
                    return false;
                }

                // Disable button and show loading
                $button.prop('disabled', true).html('<i class="icon-loading mr-2"></i> Processing...');

                // Submit via AJAX to handle redirect
                $.ajax({
                    url: $(this).attr('action'),
                    type: 'POST',
                    data: {
                        prescriptionId: prescriptionId || null,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(response) {
                        console.log('Checkout response:', response);

                        if (response.success && response.redirectUrl) {
                            console.log('Redirecting to:', response.redirectUrl);
                            window.location.href = response.redirectUrl;
                        } else {
                            alert('Error: ' + (response.message || 'Failed to process checkout'));
                            $button.prop('disabled', false)
                                .html('<i class="icon-credit-card mr-2"></i> Proceed to Payment');
                        }
                    },
                    error: function(xhr, status, error) {
                        console.error('Checkout error:', status, error);
                        alert('An error occurred. Please try again.');
                        $button.prop('disabled', false)
                            .html('<i class="icon-credit-card mr-2"></i> Proceed to Payment');
                    }
                });

                return false;
            });

            // Initialize button state
            updatePaymentButton();

            console.log('Script initialization complete');
        });
    </script>
}

@section Styles {
    <style>
        .custom-file-label::after {
            content: "Browse";
        }

        .card {
            transition: all 0.3s ease;
        }

        .badge {
            font-size: 0.75rem;
            padding: 0.35em 0.65em;
        }

        address {
            line-height: 1.8;
        }

        /* Loading animation */
        .icon-loading {
            display: inline-block;
            animation: spin 1s linear infinite;
        }

        keyframes spin {
            0%

        {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }

        }

        /* Button states */
        #proceedToPayment:disabled {
            cursor: not-allowed;
            opacity: 0.6;
        }
    </style>
}