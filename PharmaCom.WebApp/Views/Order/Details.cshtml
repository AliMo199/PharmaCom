@model OrderDetailViewModel

@{
    Layout = "~/Views/Shared/_MainThemeLayout.cshtml";
    ViewData["Title"] = "Order Details";
    ViewBag.CurrentPage = "order";
}

@section Breadcrumb {
    <div class="bg-light py-3">
        <div class="container">
            <div class="row">
                <div class="col-md-12 mb-0">
                    <a asp-controller="Home" asp-action="Index">Home</a>
                    <span class="mx-2 mb-0">/</span>
                    <a asp-controller="Order" asp-action="Index">My Orders</a>
                    <span class="mx-2 mb-0">/</span>
                    <strong class="text-black">Order #@Model.Id</strong>
                </div>
            </div>
        </div>
    </div>
}

<div class="site-section">
    <div class="container">
        <!-- Page Header -->
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="d-flex justify-content-between align-items-center">
                    <h2 class="text-black h3 text-uppercase">Order Details</h2>
                    <span class="badge badge-@GetStatusBadgeClass(Model.Status) p-3" style="font-size: 1rem;">
                        @Model.Status
                    </span>
                </div>
            </div>
        </div>

        <!-- ✅ ADD THIS SECTION HERE - Prescription Status Alert -->
        @if (ViewBag.Prescription != null)
        {
            var prescription = ViewBag.Prescription as PharmaCom.Domain.Models.Prescription;

            @if (prescription.Status == "Pending")
            {
                <div class="row mb-4">
                    <div class="col-md-12">
                        <div class="alert alert-warning border-0 shadow-sm" role="alert">
                            <div class="d-flex align-items-start">
                                <span class="icon-clock mr-3 mt-1" style="font-size: 32px; color: #856404;"></span>
                                <div class="flex-grow-1">
                                    <h5 class="alert-heading mb-2">
                                        <i class="icon-alert-circle"></i> Order Awaiting Prescription Approval
                                    </h5>
                                    <p class="mb-2">
                                        Your prescription is currently being reviewed by our pharmacist.
                                        Your order will be processed once the prescription is approved.
                                    </p>
                                    <hr class="my-2">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <strong>Prescription Status:</strong>
                                            <span class="badge badge-warning ml-2">
                                                <i class="icon-clock"></i> @prescription.Status
                                            </span>
                                        </div>
                                        <a href="@prescription.FileUrl" target="_blank" class="btn btn-sm btn-outline-primary">
                                            <i class="icon-eye"></i> View Prescription
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else if (prescription.Status == "Approved")
            {
                <div class="row mb-4">
                    <div class="col-md-12">
                        <div class="alert alert-success border-0 shadow-sm" role="alert">
                            <div class="d-flex align-items-start">
                                <span class="icon-check-circle mr-3 mt-1" style="font-size: 32px; color: #155724;"></span>
                                <div class="flex-grow-1">
                                    <h5 class="alert-heading mb-2">
                                        <i class="icon-check"></i> Prescription Approved
                                    </h5>
                                    <p class="mb-2">
                                        Great news! Your prescription has been approved by our pharmacist.
                                        Your order is being processed.
                                    </p>
                                    <hr class="my-2">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <strong>Prescription Status:</strong>
                                            <span class="badge badge-success ml-2">
                                                <i class="icon-check-circle"></i> @prescription.Status
                                            </span>
                                            @if (prescription.VerificationDate.HasValue)
                                            {
                                                <span class="text-muted ml-2">
                                                    <small>Approved on @prescription.VerificationDate.Value.ToString("MMM dd, yyyy")</small>
                                                </span>
                                            }
                                        </div>
                                        <a href="@prescription.FileUrl" target="_blank" class="btn btn-sm btn-outline-success">
                                            <i class="icon-eye"></i> View Prescription
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else if (prescription.Status == "Rejected")
            {
                <div class="row mb-4">
                    <div class="col-md-12">
                        <div class="alert alert-danger border-0 shadow-sm" role="alert">
                            <div class="d-flex align-items-start">
                                <span class="icon-x-circle mr-3 mt-1" style="font-size: 32px; color: #721c24;"></span>
                                <div class="flex-grow-1">
                                    <h5 class="alert-heading mb-2">
                                        <i class="icon-alert-circle"></i> Prescription Rejected
                                    </h5>
                                    <p class="mb-2">
                                        Unfortunately, your prescription could not be approved. Please contact our support team or upload a new prescription.
                                    </p>
                                    @if (!string.IsNullOrWhiteSpace(prescription.Comments))
                                    {
                                        <div class="bg-white p-3 rounded mb-2">
                                            <strong>Pharmacist Comments:</strong>
                                            <p class="mb-0 mt-2">@prescription.Comments</p>
                                        </div>
                                    }
                                    <hr class="my-2">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <strong>Prescription Status:</strong>
                                            <span class="badge badge-danger ml-2">
                                                <i class="icon-x-circle"></i> @prescription.Status
                                            </span>
                                        </div>
                                        <div>
                                            <a href="@prescription.FileUrl" target="_blank" class="btn btn-sm btn-outline-danger mr-2">
                                                <i class="icon-eye"></i> View Prescription
                                            </a>
                                            <a asp-controller="Home" asp-action="Contact" class="btn btn-sm btn-primary">
                                                <i class="icon-phone"></i> Contact Support
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else if (prescription.Status == "MoreInfoRequired")
            {
                <div class="row mb-4">
                    <div class="col-md-12">
                        <div class="alert alert-info border-0 shadow-sm" role="alert">
                            <div class="d-flex align-items-start">
                                <span class="icon-info mr-3 mt-1" style="font-size: 32px; color: #004085;"></span>
                                <div class="flex-grow-1">
                                    <h5 class="alert-heading mb-2">
                                        <i class="icon-alert-circle"></i> Additional Information Required
                                    </h5>
                                    <p class="mb-2">
                                        Our pharmacist needs additional information about your prescription. Please review the comments below.
                                    </p>
                                    @if (!string.IsNullOrWhiteSpace(prescription.Comments))
                                    {
                                        <div class="bg-white p-3 rounded mb-2">
                                            <strong>Pharmacist Request:</strong>
                                            <p class="mb-0 mt-2">@prescription.Comments</p>
                                        </div>
                                    }
                                    <hr class="my-2">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <strong>Prescription Status:</strong>
                                            <span class="badge badge-info ml-2">
                                                <i class="icon-info"></i> @prescription.Status
                                            </span>
                                        </div>
                                        <div>
                                            <a href="@prescription.FileUrl" target="_blank" class="btn btn-sm btn-outline-info mr-2">
                                                <i class="icon-eye"></i> View Prescription
                                            </a>
                                            <a asp-controller="Home" asp-action="Contact" class="btn btn-sm btn-primary">
                                                <i class="icon-phone"></i> Contact Support
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        <!-- ✅ END OF PRESCRIPTION STATUS SECTION -->

        <div class="row">
            <!-- Order Information Card -->
            <div class="col-lg-8 mb-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-bottom py-3">
                        <h5 class="mb-0">
                            <i class="icon-shopping-bag mr-2"></i>Order Information
                        </h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <p class="mb-2">
                                    <strong class="text-muted">Order Number:</strong><br>
                                    <span class="text-black">#@Model.Id</span>
                                </p>
                            </div>
                            <div class="col-md-6">
                                <p class="mb-2">
                                    <strong class="text-muted">Order Date:</strong><br>
                                    <span class="text-black">@Model.OrderDate.ToString("MMMM dd, yyyy")</span>
                                </p>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <p class="mb-2">
                                    <strong class="text-muted">Status:</strong><br>
                                    <span class="badge badge-@GetStatusBadgeClass(Model.Status)">@Model.Status</span>
                                </p>
                            </div>
                            <div class="col-md-6">
                                <p class="mb-2">
                                    <strong class="text-muted">Total Amount:</strong><br>
                                    <span class="text-black h5 mb-0">$@Model.TotalAmount.ToString("F2")</span>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Order Items -->
                <div class="card border-0 shadow-sm mt-4">
                    <div class="card-header bg-white border-bottom py-3">
                        <h5 class="mb-0">
                            <i class="icon-list mr-2"></i>Order Items
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="bg-light">
                                    <tr>
                                        <th class="border-0 py-3">Product</th>
                                        <th class="border-0 py-3 text-center">Quantity</th>
                                        <th class="border-0 py-3 text-right">Price</th>
                                        <th class="border-0 py-3 text-right">Subtotal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.OrderItems)
                                    {
                                        <tr>
                                            <td class="align-middle py-3">
                                                <div class="d-flex align-items-center">
                                                    <div>
                                                        <strong class="text-black">@item.ProductName</strong>
                                                        @if (item.IsRxRequired)
                                                        {
                                                            <br>
                                                            <span class="badge badge-danger badge-sm mt-1">
                                                                <i class="icon-alert-circle"></i> Rx Required
                                                            </span>
                                                        }
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="align-middle text-center py-3">
                                                <span class="badge badge-secondary px-3 py-2">@item.Quantity</span>
                                            </td>
                                            <td class="align-middle text-right py-3">
                                                <span class="text-black">$@item.Price.ToString("F2")</span>
                                            </td>
                                            <td class="align-middle text-right py-3">
                                                <strong class="text-black">$@item.Subtotal.ToString("F2")</strong>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot class="bg-light">
                                    <tr>
                                        <td colspan="3" class="text-right py-3">
                                            <strong class="text-black">Total:</strong>
                                        </td>
                                        <td class="text-right py-3">
                                            <strong class="text-primary h5 mb-0">$@Model.TotalAmount.ToString("F2")</strong>
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Shipping Address Card -->
            <div class="col-lg-4 mb-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-bottom py-3">
                        <h5 class="mb-0">
                            <i class="icon-location-arrow mr-2"></i>Shipping Address
                        </h5>
                    </div>
                    <div class="card-body p-4">
                        <address class="mb-0">
                            <strong class="text-black d-block mb-2">Delivery Address:</strong>
                            <span class="text-muted">
                                @Model.ShippingAddress.Line1<br>
                                @Model.ShippingAddress.City<br>
                                @Model.ShippingAddress.Governorate
                            </span>
                        </address>
                    </div>
                </div>

                <!-- Actions Card -->
                <div class="card border-0 shadow-sm mt-4">
                    <div class="card-header bg-white border-bottom py-3">
                        <h5 class="mb-0">
                            <i class="icon-settings mr-2"></i>Actions
                        </h5>
                    </div>
                    <div class="card-body p-4">
                        <a asp-controller="Order" asp-action="Index" class="btn btn-outline-primary btn-block mb-2">
                            <i class="icon-arrow-left mr-2"></i>Back to Orders
                        </a>
                        <a asp-controller="Home" asp-action="Store" class="btn btn-outline-secondary btn-block">
                            <i class="icon-shopping-bag mr-2"></i>Continue Shopping
                        </a>

                        @if (Model.Status == "Rejected" || Model.Status == "MoreInfoRequired")
                        {
                            <hr class="my-3">
                            <a asp-controller="Home" asp-action="Contact" class="btn btn-primary btn-block">
                                <i class="icon-phone mr-2"></i>Contact Support
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Pending" => "warning",
            "Payment Received" => "info",
            "Approved" => "success",
            "Completed" => "success",
            "Rejected" => "danger",
            "Cancelled" => "secondary",
            _ => "secondary"
        };
    }
}

@section Styles {
    <style>
        .card {
            transition: all 0.3s ease;
        }

            .card:hover {
                transform: translateY(-2px);
            }

        .badge {
            font-size: 0.85rem;
            padding: 0.5em 0.85em;
        }

        .table th {
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.85rem;
            letter-spacing: 0.5px;
        }

        .alert {
            border-radius: 8px;
        }

            .alert hr {
                border-top-color: rgba(0, 0, 0, 0.1);
            }

        address {
            line-height: 1.8;
        }

        media (max-width: 768px) {
            .card-body

        {
            padding: 1.5rem !important;
        }

        .table-responsive {
            font-size: 0.9rem;
        }

        .h3, h3 {
            font-size: 1.5rem;
        }

        }
    </style>
}