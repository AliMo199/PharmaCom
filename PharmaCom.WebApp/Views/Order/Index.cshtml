@model IEnumerable<OrderViewModel>

@{
    ViewData["Title"] = "My Orders";
    Layout = "~/Views/Shared/_MainThemeLayout.cshtml";
    ViewBag.CurrentPage = "orders";
}

@section Breadcrumb {
    <div class="bg-light py-3">
        <div class="container">
            <div class="row">
                <div class="col-md-12 mb-0">
                    <a asp-controller="Home" asp-action="Index">Home</a>
                    <span class="mx-2 mb-0">/</span>
                    <strong class="text-black">My Orders</strong>
                </div>
            </div>
        </div>
    </div>
}

<div class="site-section">
    <div class="container">
        <div class="row mb-5">
            <div class="col-md-12">
                <h2 class="text-black h3 mb-3 text-uppercase">My Orders</h2>
            </div>
        </div>

        @if (Model != null && Model.Any())
        {
            <!-- Desktop Table View -->
            <div class="row mb-5 d-none d-lg-block">
                <div class="col-md-12">
                    <div class="site-blocks-table">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th class="text-center">Order #</th>
                                    <th class="text-center">Date</th>
                                    <th class="text-center">Total Amount</th>
                                    <th class="text-center">Status</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model)
                                {
                                    <tr>
                                        <td class="text-center">
                                            <strong class="text-primary">#@order.Id</strong>
                                        </td>
                                        <td class="text-center">
                                            @order.OrderDate.ToString("MMM dd, yyyy")
                                            <br />
                                            <small class="text-muted">@order.OrderDate.ToString("hh:mm tt")</small>
                                        </td>
                                        <td class="text-center">
                                            <strong class="text-black">@order.TotalAmount.ToString("C", new System.Globalization.CultureInfo("ar-EG"))</strong>
                                        </td>
                                        <td class="text-center">
                                            @{
                                                var badgeClass = "badge-secondary";
                                                switch (order.Status?.ToLower())
                                                {
                                                    case "pending":
                                                        badgeClass = "badge-warning";
                                                        break;
                                                    case "approved":
                                                        badgeClass = "badge-success";
                                                        break;
                                                    case "processing":
                                                    case "payment received":
                                                        badgeClass = "badge-info";
                                                        break;
                                                    case "shipped":
                                                        badgeClass = "badge-primary";
                                                        break;
                                                    case "delivered":
                                                        badgeClass = "badge-success";
                                                        break;
                                                    case "rejected":
                                                        badgeClass = "badge-danger";
                                                        break;
                                                }
                                            }
                                            <span class="badge @badgeClass px-3 py-2">@order.Status</span>
                                        </td>
                                        <td class="text-center">
                                            <a asp-action="Details" asp-route-id="@order.Id"
                                               class="btn btn-primary btn-sm px-4">
                                                View Details
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Mobile/Tablet Card View -->
            <div class="row mb-5 d-lg-none">
                <div class="col-12">
                    @foreach (var order in Model)
                    {
                        var badgeClass = "badge-secondary";
                        switch (order.Status?.ToLower())
                        {
                            case "pending":
                                badgeClass = "badge-warning";
                                break;
                            case "paymentreceived":
                            case "payment received":
                                badgeClass = "badge-success";
                                break;
                            case "processing":
                                badgeClass = "badge-info";
                                break;
                            case "shipped":
                                badgeClass = "badge-primary";
                                break;
                            case "delivered":
                                badgeClass = "badge-success";
                                break;
                            case "cancelled":
                                badgeClass = "badge-danger";
                                break;
                        }

                        <div class="card border-0 shadow-sm mb-3 order-card">
                            <div class="card-body p-3">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div>
                                        <h5 class="text-primary mb-1 h6">Order #@order.Id</h5>
                                        <small class="text-muted">
                                            @order.OrderDate.ToString("MMM dd, yyyy") at @order.OrderDate.ToString("hh:mm tt")
                                        </small>
                                    </div>
                                    <span class="badge @badgeClass px-2 py-1">@order.Status</span>
                                </div>

                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <small class="text-muted d-block mb-1">Total Amount</small>
                                        <strong class="text-black h6 mb-0">@order.TotalAmount.ToString("C", new System.Globalization.CultureInfo("ar-EG"))</strong>
                                    </div>
                                    <a asp-action="Details" asp-route-id="@order.Id"
                                       class="btn btn-primary btn-sm">
                                        View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <a asp-controller="Home" asp-action="Store" class="btn btn-outline-primary btn-md">
                        <span class="icon-arrow-left mr-2"></span> Continue Shopping
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-12 text-center py-5">
                    <span class="icon-receipt" style="font-size: 80px; color: #ccc;"></span>
                    <h3 class="text-muted mt-3">No Orders Yet</h3>
                    <p class="text-muted">Start shopping to place your first order!</p>
                    <a asp-controller="Home" asp-action="Store" class="btn btn-primary mt-3 px-5">
                        Start Shopping
                    </a>
                </div>
            </div>
        }
    </div>
</div>

@section Styles {
    <style>
        .badge {
            font-size: 0.85rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .badge-warning {
            background-color: #ffc107;
            color: #000;
        }

        .badge-success {
            background-color: #28a745;
            color: #fff;
        }

        .badge-info {
            background-color: #17a2b8;
            color: #fff;
        }

        .badge-primary {
            background-color: #007bff;
            color: #fff;
        }

        .badge-danger {
            background-color: #dc3545;
            color: #fff;
        }

        .badge-secondary {
            background-color: #6c757d;
            color: #fff;
        }

        .site-blocks-table table {
            background: #fff;
        }

            .site-blocks-table table td,
            .site-blocks-table table th {
                vertical-align: middle;
                padding: 1rem;
            }

            .site-blocks-table table thead tr {
                background-color: #f8f9fa;
            }

            .site-blocks-table table thead th {
                font-weight: 600;
                text-transform: uppercase;
                font-size: 0.9rem;
                color: #495057;
            }

            .site-blocks-table table tbody tr:hover {
                background-color: #f8f9fa;
            }

        .order-card {
            transition: all 0.3s ease;
        }

            .order-card:hover {
                transform: translateY(-2px);
                box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
            }

        /* Tablet adjustments */
        @@media (max-width: 991px) and (min-width: 768px) {
            .order-card .card-body

        {
            padding: 1.25rem !important;
        }

        .order-card h5 {
            font-size: 1.1rem;
        }

        }

        /* Mobile adjustments */
        @@media (max-width: 767px) {
            .order-card .badge

        {
            font-size: 0.75rem;
            padding: 0.25rem 0.5rem !important;
        }

        .order-card h5 {
            font-size: 1rem;
        }

        .order-card .btn-sm {
            font-size: 0.8rem;
            padding: 0.375rem 0.75rem;
        }

        .h3, h3 {
            font-size: 1.5rem;
        }

        }

        /* Extra small devices */
        @@media (max-width: 576px) {
            .site-section

        {
            padding: 2rem 0;
        }

        .order-card .card-body {
            padding: 1rem !important;
        }

        .btn-md {
            font-size: 0.9rem;
            padding: 0.5rem 1rem;
        }

        }</style>
}