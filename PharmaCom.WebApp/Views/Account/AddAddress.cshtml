@model Address

@{
    ViewData["Title"] = "Add Address";
    Layout = "~/Views/Shared/_MainThemeLayout.cshtml";
}

@section Breadcrumb {
    <div class="bg-light py-3">
        <div class="container">
            <div class="row">
                <div class="col-md-12 mb-0">
                    <a asp-controller="Home" asp-action="Index">Home</a>
                    <span class="mx-2 mb-0">/</span>
                    <a asp-action="Profile">My Profile</a>
                    <span class="mx-2 mb-0">/</span>
                    <strong class="text-black">Add Address</strong>
                </div>
            </div>
        </div>
    </div>
}

<div class="site-section">
    <div class="container">
        <div class="row mb-5">
            <div class="col-md-12">
                <h2 class="text-black h3 mb-3 text-uppercase">Add New Address</h2>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4">
                        <form asp-action="AddAddress" method="post">
                            @Html.AntiForgeryToken()
                            <div asp-validation-summary="All" class="text-danger mb-3"></div>

                            <div class="form-group mb-4">
                                <label asp-for="Line1" class="text-black font-weight-bold">
                                    Street Address <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Line1" class="form-control" placeholder="Enter your street address" required />
                                <span asp-validation-for="Line1" class="text-danger"></span>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <label asp-for="City" class="text-black font-weight-bold">
                                        City <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="City" class="form-control" placeholder="Enter city" required />
                                    <span asp-validation-for="City" class="text-danger"></span>
                                </div>

                                <div class="col-md-6 mb-4">
                                    <label asp-for="Governorate" class="text-black font-weight-bold">
                                        Governorate <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Governorate" class="form-control" placeholder="Enter governorate" required />
                                    <span asp-validation-for="Governorate" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group mb-4">
                                <div class="custom-control custom-checkbox">
                                    <input asp-for="IsDefault" type="checkbox" class="custom-control-input" id="isDefault">
                                    <label class="custom-control-label" for="isDefault">
                                        Set as default address
                                    </label>
                                </div>
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-primary px-5 mr-2">
                                    <span class="icon-save mr-2"></span> Save Address
                                </button>
                                <a asp-action="Profile" class="btn btn-outline-secondary px-5">
                                    Cancel
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}