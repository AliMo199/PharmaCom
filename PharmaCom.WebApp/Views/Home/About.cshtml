</div>

@* =========================
   6. CALL TO ACTION
   ========================= *@
<div class="site-section py-5" style="background-color: var(--pharma-red);">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center">
            <div class="col-md-8">
                <h2 class="text-white fw-bold mb-3">Ready to order your meds?</h2>
                <p class="text-white-50 mb-4 lead">Experience the new standard of online pharmacy today.</p>
                <div class="d-flex justify-content-center gap-3">
                    @* Custom Buttons *@
                    <a asp-controller="Home" asp-action="Store" class="btn btn-white-custom rounded-pill px-5 fw-bold">Shop Now</a>
                    <a asp-controller="Home" asp-action="Contact" class="btn btn-outline-white-custom rounded-pill px-5 fw-bold">Contact Us</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Card Hover Effect */
    .hover-up {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .hover-up:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        }

    /* Grayscale Image Effect */
    .grayscale-hover {
        filter: grayscale(100%);
        transition: 0.3s ease;
    }

        .grayscale-hover:hover {
            filter: grayscale(0%);
        }

    /* =========================================
           CUSTOM BUTTONS (Swapping Styles Logic)
           ========================================= */

    /* 1. Shop Now Button (Initially: White Background, Red Text) */
    .btn-white-custom {
        background-color: #fff;
        color: var(--pharma-red);
        border: 2px solid #fff;
        transition: background-color 0.3s ease, color 0.3s ease;
    }
        /* Hover: Becomes Transparent, White Text (Like Contact button default) */
        .btn-white-custom:hover {
            background-color: transparent;
            color: #fff !important;
            border-color: #fff;
            text-decoration: none;
            transform: none !important;
        }

    /* 2. Contact Us Button (Initially: Transparent, White Text) */
    .btn-outline-white-custom {
        background-color: transparent;
        color: #fff !important;
        border: 2px solid #fff;
        transition: background-color 0.3s ease, color 0.3s ease;
    }
        /* Hover: Becomes White Background, Red Text (Like Shop button default) */
        .btn-outline-white-custom:hover {
            background-color: #fff;
            color: var(--pharma-red) !important;
            text-decoration: none;
            transform: none !important;
        }
</style>