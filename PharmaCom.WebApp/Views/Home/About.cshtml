                <div class="row gap-3 justify-content-center">
                    <div class="col-5 col-md-4">
                        <img src="~/images/person_1.jpg" class="img-fluid rounded-4 shadow-sm grayscale-hover" alt="Pharmacist">
                    </div>
                    <div class="col-5 col-md-4 mt-4">
                        <img src="~/images/person_2.jpg" class="img-fluid rounded-4 shadow-sm grayscale-hover" alt="Specialist">
