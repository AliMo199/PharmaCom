@{
    Layout = "~/Views/Shared/_MainThemeLayout.cshtml";
    ViewData["Title"] = "About Us";
    ViewBag.CurrentPage = "about";
}

@* =========================
   1. HERO SECTION
   ========================= *@
<div class="site-section bg-light" style="background: linear-gradient(135deg, #fff5f5, #ffffff);">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center py-5">
            <div class="col-md-8">
                <span class="d-inline-block py-1 px-3 rounded-pill bg-danger-subtle text-danger fw-bold mb-3 shadow-sm">
                    <small>🌟 Trusted Healthcare</small>
                </span>
                <h1 class="display-4 fw-bolder text-black mb-3">
                    We Put Your Health <span style="color: var(--pharma-red);">First</span>
                </h1>
                <p class="lead text-muted mb-5">
                    A trusted pharmaceutical platform providing medicines, supplements, and healthcare products with ease, safety, and reliability.
                </p>
            </div>
        </div>
    </div>
</div>

@* =========================
   2. OUR STORY
   ========================= *@
<div class="site-section bg-white">
    <div class="container">
        <div class="row align-items-center">
            @* Image Side *@
            <div class="col-lg-6 mb-5 mb-lg-0 order-lg-2">
                <div class="position-relative text-center">
                    <img src="~/images/pills.jpg" alt="Our Pharmacy" class="img-fluid rounded-5 shadow-lg border border-white border-5" style="width: 85%; object-fit: cover;">

                    @* Experience Box *@
                    <div class="position-absolute bg-white p-3 p-md-4 rounded-4 shadow-sm" style="bottom: -20px; left: 20px; min-width: 220px; width: auto; text-align: left;">
                        <div class="d-flex align-items-center gap-3">
                            <span class="display-4 fw-bold text-danger">10+</span>
                            <div class="text-muted lh-1 small fw-bold">
                                Years of <br> Experience
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @* Text Side *@
            <div class="col-lg-6 order-lg-1">
                <h2 class="text-black fw-bold mb-4">Our Story</h2>
                <p class="text-muted mb-4 lead">
                    Since the founding of PharmaCom, our goal has been to provide a secure and easy digital pharmacy experience, ensuring the highest levels of quality and user comfort.
                </p>
                <p class="text-muted mb-4">
                    We work with the best authorized suppliers to ensure that original medicines reach your home quickly and easily. We believe that healthcare should be accessible to everyone, everywhere.
                </p>

                @* Certifications *@
                <div class="d-flex gap-3 mt-4">
                    <div class="d-flex align-items-center text-black">
                        <span class="icon-check-circle text-danger me-2 fs-5"></span> Authorized
                    </div>
                    <div class="d-flex align-items-center text-black">
                        <span class="icon-check-circle text-danger me-2 fs-5"></span> GMP Certified
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

