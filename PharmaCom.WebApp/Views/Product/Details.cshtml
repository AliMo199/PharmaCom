@model Product
@{
	ViewData["Title"] = "Product Details";
	Layout = "_DashboardLayout";
}
<div class="container mt-5">
	<div class="row justify-content-center">
		<div class="col-md-8">
			<div class="card shadow-sm border-0 rounded-3">
				<div class="card-header bg-primary text-white text-center">
					<h4 class="mb-0">Product Details</h4>
				</div>
				<div class="card-body p-4">
					@if (!string.IsNullOrEmpty(Model.ImageURLString))
					{
						<div class="text-center mb-4">
							<img src="@Model.ImageURLString" alt="@Model.Name" class="img-fluid rounded" style="max-height: 300px;" />
						</div>
					}
					<h3 class="card-title text-center mb-3">@Model.Name</h3>
					<p class="card-text"><strong>Brand:</strong> @Model.Brand</p>
					<p class="card-text"><strong>Description:</strong> @Model.Description</p>
					<p class="card-text"><strong>Price:</strong> $@Model.Price.ToString("F2")</p>
					<p class="card-text"><strong>Form:</strong> @Model.Form</p>
					<p class="card-text"><strong>Category:</strong> @Model.Category?.Name</p>
					<p class="card-text"><strong>Is Prescription Required:</strong>@(Model.IsRxRequired ? "Yes" : "No")</p>
					<a asp-action="Index" class="btn btn-secondary mt-3">Back to Products</a>
				</div>
