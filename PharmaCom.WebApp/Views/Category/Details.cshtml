@model Category

@{
    ViewData["Title"] = "Category Details";
    Layout = "_DashboardLayout";
}

<div class="container mt-4">
    <div class="card shadow-sm p-4">
        <h2 class="mb-4 text-center text-md-start">
            <i class="bi bi-folder2-open me-3"></i> Category Details
        </h2>

        <!-- Category Info -->
        <dl class="row mb-0">
            <dt class="col-sm-3 col-md-2">ID</dt>
            <dd class="col-sm-9 col-md-10">@Model.Id</dd>

            <dt class="col-sm-3 col-md-2">Name</dt>
            <dd class="col-sm-9 col-md-10">@Model.Name</dd>
        </dl>

        @if (Model.Products != null && Model.Products.Any())
        {
            <hr class="my-4">
            <h4 class="mt-3 mb-3 text-center text-md-start">
                <i class="bi bi-box-seam me-2"></i> Products in this Category
            </h4>

            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Name</th>
                            <th scope="col">Brand</th>
                            <th scope="col">Price</th>
                            <th scope="col">Form</th>
                            <th scope="col">Category</th>
                            <th scope="col">Is Rx Required</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model.Products)
                        {
                            <tr>
                                <td>@product.Id</td>
                                <td>@product.Name</td>
                                <td>@product.Brand</td>
                                <td>@product.Price.ToString("C")</td>
                                <td>@product.Form</td>
                                <td>@product.Category?.Name</td>
                                <td>@(product.IsRxRequired ? "Yes" : "No")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <hr class="my-4">
            <p class="text-muted text-center mb-0">
                <i class="bi bi-info-circle me-2"></i>No products in this category.
            </p>
        }
    </div>

    <div class="d-flex justify-content-center align-items-center justify-content-md-start mt-3 mb-3">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-2"></i> Back
        </a>
    </div>
</div>

@section Styles {
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.11.3/font/bootstrap-icons.min.css"
          crossorigin="anonymous" referrerpolicy="no-referrer" />

    <style>
        /* === CATEGORY DETAILS RESPONSIVE === */

        .card {
            border-radius: 0.5rem;
        }

        dt {
            font-weight: 600;
        }

        /* Tables scroll nicely on small screens */
        .table-responsive {
            overflow-x: auto;
            -webkit-overflow-scrolling: touch;
            border-radius: 0.5rem;
        }

        @@media (max-width: 767.98px) {
            h2, h4

        {
            font-size: 1.4rem;
            text-align: center;
        }

        dt, dd {
            display: block;
            width: 100%;
            text-align: center;
        }

        .btn {
            width: 100%;
            justify-content: center;
        }

        }
    </style>
}