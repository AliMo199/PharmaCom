@model IEnumerable<Category>

@{
    ViewData["Title"] = "Categories";
    Layout = "_DashboardLayout";
}

<div class="container mt-2">
    <h1>Categories</h1>

    <a asp-action="Create" class="btn btn-primary mb-3">Create New Category</a>

    <table class="table mt-1">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@category.Id" class="btn btn-info btn-sm me-1">Details</a>
                        <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary btn-sm me-1">Edit</a>
                        <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>