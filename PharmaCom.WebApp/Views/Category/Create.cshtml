@model PharmaCom.Domain.Models.Category

@{
    ViewData["Title"] = "Create Category";
}

<div class="container mt-5">
    <div class="card shadow-sm p-4">
        <h2 class="mb-4">Create New Category</h2>

        <form asp-action="Create" asp-controller="Category" method="post">
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control rounded" />
                <span asp-validation-for="Name" class="text-danger"></span>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary btn-rounded shadow-sm">Create</button>
            <a asp-action="Index" class="btn btn-secondary btn-rounded ms-2">Back</a>
        </form>
    </div>
</div>