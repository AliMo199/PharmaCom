@model PharmaCom.Domain.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container mt-5">
    <div class="card shadow-sm p-4">
        <h2 class="mb-4 text-danger">Delete Category</h2>

        <p>Are you sure you want to delete this category?</p>

        <dl class="row">
            <dt class="col-sm-2">ID</dt>
            <dd class="col-sm-10">@Model.Id</dd>

            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Model.Name</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger btn-rounded shadow-sm">Delete</button>
            <a asp-action="Index" class="btn btn-secondary btn-rounded ms-2">Cancel</a>
        </form>
    </div>
</div>
