@model PagedResult<Order>
@{
    ViewData["Title"] = "Order Management";
    Layout = "_DashboardLayout";
    var statusList = ViewBag.StatusList as List<string>;
    var currentStatus = ViewBag.Status;
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Order Management</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Dashboard">Dashboard</a></li>
        <li class="breadcrumb-item active">Order Management</li>
    </ol>
    
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-filter me-1"></i>
            Order Filters
        </div>
        <div class="card-body">
            <form id="orderFilterForm" method="get" action="/Dashboard/OrderManagement">
                <div class="row mb-3">
                    <div class="col-md-3">
                        <label for="searchTerm" class="form-label">Search</label>
                        <input type="text" class="form-control" id="searchTerm" name="searchTerm" value="@ViewBag.SearchTerm" 
                               placeholder="Order ID, Session ID...">
                    </div>
                    <div class="col-md-3">
                        <label for="status" class="form-label">Status</label>
                        <select class="form-select" id="status" name="status">
                            <option value="">All Statuses</option>
                            @foreach (var status in statusList)
                            {
                                <option value="@status" selected="@(status == currentStatus ? "selected" : "")">@status</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="sortBy" class="form-label">Sort By</label>
                        <select class="form-select" id="sortBy" name="sortBy">
                            <option value="OrderDate" selected="@(ViewBag.SortBy == "OrderDate" ? "selected" : "")">Date</option>
                            <option value="TotalAmount" selected="@(ViewBag.SortBy == "TotalAmount" ? "selected" : "")">Amount</option>
                            <option value="Status" selected="@(ViewBag.SortBy == "Status" ? "selected" : "")">Status</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="sortDescending" class="form-label">Order</label>
                        <select class="form-select" id="sortDescending" name="sortDescending">
                            <option value="true" selected="@(ViewBag.SortDescending ? "selected" : "")">Descending</option>
                            <option value="false" selected="@(!ViewBag.SortDescending ? "selected" : "")">Ascending</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 text-end">
                        <button type="submit" class="btn btn-primary">Apply Filters</button>
                        <a href="/Dashboard/OrderManagement" class="btn btn-secondary">Clear Filters</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
    
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Orders
        </div>
        <div class="card-body">
            <table id="ordersTable" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Date</th>
                        <th>Customer</th>
                        <th>Total</th>
                        <th>Status</th>
                        <th>Prescription</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.Items)
                    {
                        <tr>
                            <td>@order.Id</td>
                            <td>@order.OrderDate.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@(order.ApplicationUser?.UserName ?? "N/A")</td>
                            <td>$@order.TotalAmount.ToString("N2")</td>
                            <td>
                                <span class="badge @(order.Status == "Completed" ? "bg-success" : 
                                                   order.Status == "Pending" ? "bg-warning" : 
                                                   order.Status == "Rejected" ? "bg-danger" : "bg-info")">
                                    @order.Status
                                </span>
                            </td>
                        <td>
                            @if (order.PrescriptionId.HasValue)
                                {
                                    var status = order.Prescription?.FirstOrDefault()?.Status;
                                    <span class="badge @(status == "Approved" ? "bg-success" :
                                                                      status == "Rejected" ? "bg-danger" :
                                                                      status == "MoreInfoRequired" ? "bg-warning" : "bg-info")">
                                @(status ?? "Pending")
                            </span>
                            <a href="@Url.Action("View", "Prescription", new { id = order.PrescriptionId })" class="btn btn-sm btn-info">
                                <i class="fas fa-eye"></i>
                            </a>
                                                        }
                                else if (order.OrderItems.Any(oi => oi.Product.IsRxRequired))
                                {
                                    <span class="badge bg-danger">Required</span>
                                    <a href="@Url.Action("Upload", "Prescription", new { orderId = order.Id })" class="btn btn-sm btn-primary">
                                        <i class="fas fa-upload"></i>
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a href="/Order/Details/@order.Id" class="btn btn-sm btn-primary">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <button type="button" class="btn btn-sm btn-success update-status" 
                                            data-id="@order.Id" data-status="@order.Status">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            
            <!-- Pagination -->
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    @if (Model.HasPrevious)
                    {
                        <li class="page-item">
                            <a class="page-link" href="/Dashboard/OrderManagement?pageNumber=@(Model.PageNumber-1)&pageSize=@Model.PageSize&searchTerm=@ViewBag.SearchTerm&status=@ViewBag.Status&sortBy=@ViewBag.SortBy&sortDescending=@ViewBag.SortDescending">
                                Previous
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item disabled">
                            <span class="page-link">Previous</span>
                        </li>
                    }
                    
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" href="/Dashboard/OrderManagement?pageNumber=@i&pageSize=@Model.PageSize&searchTerm=@ViewBag.SearchTerm&status=@ViewBag.Status&sortBy=@ViewBag.SortBy&sortDescending=@ViewBag.SortDescending">
                                @i
                            </a>
                        </li>
                    }
                    
                    @if (Model.HasNext)
                    {
                        <li class="page-item">
                            <a class="page-link" href="/Dashboard/OrderManagement?pageNumber=@(Model.PageNumber+1)&pageSize=@Model.PageSize&searchTerm=@ViewBag.SearchTerm&status=@ViewBag.Status&sortBy=@ViewBag.SortBy&sortDescending=@ViewBag.SortDescending">
                                Next
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item disabled">
                            <span class="page-link">Next</span>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    </div>
</div>

<!-- Status Update Modal -->
<div class="modal fade" id="statusModal" tabindex="-1" aria-labelledby="statusModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="statusModalLabel">Update Order Status</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="statusUpdateForm">
                    <input type="hidden" id="orderIdInput" name="orderId" />
                    <div class="mb-3">
                        <label for="statusSelect" class="form-label">Status</label>
                        <select class="form-select" id="statusSelect" name="status">
                            @foreach (var status in statusList)
                            {
                                <option value="@status">@status</option>
                            }
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="updateStatusBtn">Update</button>
            </div>
        </div>
    </div>
</div>

<!-- Prescription View Modal -->
<div class="modal fade" id="prescriptionModal" tabindex="-1" aria-labelledby="prescriptionModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="prescriptionModalLabel">Prescription</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="text-center">
                    <img id="prescriptionImage" src="" class="img-fluid" alt="Prescription" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <a id="prescriptionDownload" href="#" class="btn btn-primary" download>Download</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize DataTable
            $('#ordersTable').DataTable({
                paging: false,
                searching: false
            });
            
            // Status Update Modal
            $('.update-status').on('click', function() {
                const orderId = $(this).data('id');
                const currentStatus = $(this).data('status');
                $('#orderIdInput').val(orderId);
                $('#statusSelect').val(currentStatus);
                $('#statusModal').modal('show');
            });
            
            // Update Status Button
            $('#updateStatusBtn').on('click', function() {
                const orderId = $('#orderIdInput').val();
                const status = $('#statusSelect').val();
                
                $.ajax({
                    url: '/Dashboard/UpdateOrderStatus',
                    type: 'POST',
                    data: { orderId, status },
                    success: function(response) {
                        if (response.success) {
                            $('#statusModal').modal('hide');
                            // Show success message
                            toastr.success(response.message);
                            // Reload page after a short delay
                            setTimeout(function() {
                                location.reload();
                            }, 1000);
                        } else {
                            toastr.error(response.message);
                        }
                    },
                    error: function() {
                        toastr.error('An error occurred while updating the order status.');
                    }
                });
            });
            
            // View Prescription
            $('.view-prescription').on('click', function(e) {
                e.preventDefault();
                const prescriptionId = $(this).data('id');
                
                // In a real application, you would fetch the prescription URL from the server
                // For now, we're just showing a placeholder
                $('#prescriptionImage').attr('src', '/images/placeholder-prescription.jpg');
                $('#prescriptionDownload').attr('href', '/images/placeholder-prescription.jpg');
                
                $('#prescriptionModal').modal('show');
            });
        });
    </script>
}